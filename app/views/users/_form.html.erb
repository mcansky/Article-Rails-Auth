<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    Login :
    <%= f.text_field :login %>
  </p>
  <p>
    Prénom :
    <%= f.text_field :firstname %>
  </p>
  <p>
    Nom :
    <%= f.text_field :lastname %>
  </p>
  <p>
    Email :
    <%= f.text_field :email %>
  </p>
  <p>
    Mot de passe :
    <%= f.password_field :crypted_password %>
  </p>
  <p>
    Mot de passe (vérification) :
    <%= f.password_field :password_salt %>
  </p>
  <p><%= f.submit "Valider" %></p>
<% end %>
