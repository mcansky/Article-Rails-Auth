<h1>Posts</h1>

<table>
  <tr>
    <th>Titre</th>
    <th>Texte</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%=h post.title %></td>
      <td><%=h post.content %></td>
      <td><%= link_to "Voir", post %></td>
      <td><%= link_to "Editer", edit_post_path(post) %></td>
      <td><%= link_to "Supprimer", post, :confirm => 'Etes vous sÃ»r ?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Nouveau Post", new_post_path %></p>
